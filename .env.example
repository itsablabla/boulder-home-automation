# Environment Configuration for Boulder Home Automation
# Copy this file to .env and fill in your actual values

# UniFi Protect Configuration
UNIFI_HOST=192.168.10.49
UNIFI_USERNAME=homeassistant
UNIFI_PASSWORD=your-unifi-password-here
UNIFI_PORT=443

# PostgreSQL Database
POSTGRES_USER=homeautomation
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=homeautomation

# MQTT Broker
MQTT_USERNAME=mqtt-user
MQTT_PASSWORD=your-mqtt-password-here

# Abode Security System
ABODE_USERNAME=your-abode-username
ABODE_PASSWORD=your-abode-password

# Frigate AI Detection
FRIGATE_MQTT_HOST=mosquitto
FRIGATE_MQTT_USER=mqtt-user
FRIGATE_MQTT_PASSWORD=your-mqtt-password-here

# Node-RED Admin
NODE_RED_USERNAME=admin
NODE_RED_PASSWORD=your-nodered-password-here

# Timezone
TZ=America/Denver

# Optional: Cloudflare Tunnel Token (for remote access)
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here